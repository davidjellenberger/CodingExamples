<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/storyView_left_margin"
                android:paddingRight="@dimen/storyView_right_margin"
                android:paddingTop="@dimen/storyView_vertical_margin"
                tools:context=".StoryActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/title"
                android:id="@+id/textViewTitleList"
                android:paddingLeft="@dimen/storyView_padding_text"
                android:paddingTop="@dimen/storyView_padding_text"
                android:paddingEnd="@dimen/storyView_padding_text"
                android:paddingRight="@dimen/storyView_padding_text"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/lorem_ipsum"
                android:id="@+id/textViewExistingContent"
                android:paddingLeft="@dimen/storyView_padding_text"
                android:paddingBottom="@dimen/storyView_padding_text"
                android:paddingEnd="@dimen/storyView_padding_text"
                android:paddingRight="@dimen/storyView_padding_text"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
